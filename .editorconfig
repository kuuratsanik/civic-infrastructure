# EditorConfig for AI-Powered Civic Infrastructure
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.ps1]
indent_style = space
indent_size = 4
max_line_length = 120

[*.psm1]
indent_style = space
indent_size = 4
max_line_length = 120

[*.psd1]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.jsonl]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.reg]
end_of_line = crlf
charset = utf-16le

[Makefile]
indent_style = tab

[*.bat]
end_of_line = crlf
